<div class="container p-lg-5 bg-light">
  <h4 class="my-4">新しいアカウントを作成</h4>
  <%= render 'layouts/shared/error', obj: @user %>
  <% if flash[:failure] %>
    <p class="failure"><%= flash[:failure] %></p>
  <% end %>
  <%= form_with url: users_path, class: "needs-validation" do |f| %>
    <div class="form-row mb-4">
      <div class="col-md-6">
        <%= f.label :name, "名前", class: "col-form-label" %>
        <%= f.text_field :name, autocomplete: "name", placeholder: "ユーザー名", type: "text", name: "user[name]", id: "user_name", class: "form-control" %>
        <div class="invalid-feedback">
          入力してください
        </div>
      </div>
    </div>
    <div class="form-row mb-4">
      <div class="col-md-6">
        <%= f.label :email, "メールアドレス", class: "col-form-label" %>
        <%= f.text_field :email, autocomplete: "email", placeholder: "メールアドレス", type: "email",  name: "user[email]", id: "user_email", class: "form-control" %>
        <div class="invalid-feedback">
          入力してください
        </div>
      </div>
    </div>
    <div class="form-row mb-4">
      <div class="col-md-6">
       <%= f.label :pasword, "パスワード", class: "col-form-label" %>
          <%= f.text_field :password, autocomplete: "new-password", placeholder: "パスワード", type: "password", name: "user[password]", id: "user_password", class: "form-control" %>
        <div class="invalid-feedback">
          入力してください
        </div>
      </div>
    </div>
    <div class="form-row mb-4">
      <div class="col-md-6">
        <%= f.label :password, "パスワード確認用", class: "col-form-label" %>
          <%= f.text_field :password, autocomplete: "new-password", placeholder: "パスワード確認", type: "password", name: "user[password]", id: "user_password", class: "form-control" %>
        <div class="invalid-feedback">
          入力してください
        </div>
        <small id="passwordHelpBlock" class="form-text text-muted">パスワードは、6文字以上で入力してください</small>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
        <%= f.submit "登録", name: "commit", class: "btn btn-primary btn-block" %>
      </div>
      <p>
        <%= link_to("すでにアカウントをお持ちの方はログイン", "/users/sign_in") %>
      </p>
    </div>
  <% end %>
</div>
