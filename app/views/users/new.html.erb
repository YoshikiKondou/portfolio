<div class="container-fluid p-lg-5 bg-light mb-5">
  <div class="container">
    <div class="col-sm">
      <h2 class="my-4">新しいアカウントを作成</h2>
    </div>
    <%= render 'layouts/shared/error', obj: @user %>
    <% if flash[:failure] %>
      <p class="failure"><%= flash[:failure] %></p>
    <% end %>
    <%= form_with url: users_path, class: "needs-validation", local: true, html: {novalidate: true} do |f| %>
      <div class="form-row mb-4">
        <div class="col-md-6">
          <%= f.label :name, class: "col-form-label" do %>
            名前 <span class="badge bg-danger">必須</span>
          <% end%>
          <%= f.text_field :name, autocomplete: "name", placeholder: "ユーザー名", type: "text", name: "user[name]", id: "user_name", class: "form-control", required: true %>
          <div class="invalid-feedback">
            入力してください
          </div>
        </div>
      </div>
      <div class="form-row mb-4">
        <div class="col-md-6">
          <%= f.label :email, class: "col-form-label" do %>
            メールアドレス <span class="badge bg-danger">必須</span>
          <% end%>
          <%= f.text_field :email, autocomplete: "email", placeholder: "メールアドレス", type: "email",  name: "user[email]", id: "user_email", class: "form-control", required: true %>
          <div class="invalid-feedback">
            入力してください
          </div>
        </div>
      </div>
      <div class="form-row mb-4">
        <div class="col-md-6">
          <%= f.label :pasword, "パスワード", class: "col-form-label" do %>
            パスワード <span class="badge bg-danger">必須</span>
          <% end%>
          <%= f.text_field :password, autocomplete: "new-password", placeholder: "パスワード", type: "password", name: "user[password]", id: "user_password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            入力してください
          </div>
        </div>
      </div>
      <div class="form-row mb-4">
        <div class="col-md-6">
          <%= f.label :password, class: "col-form-label" do %>
            パスワード確認用 <span class="badge bg-danger">必須</span>
          <% end %>
          <%= f.text_field :password, autocomplete: "new-password", placeholder: "パスワード確認", type: "password", name: "user[password_confirmation]", id: "user_password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            入力してください
          </div>
          <small id="passwordHelpBlock" class="form-text text-muted">パスワードは、6文字以上で入力してください</small>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.submit "登録", name: "commit", class: "btn btn-primary btn-block bg-danger mb-2" %>
        </div>
        <p class="pt-2">
          <%= link_to("すでにアカウントをお持ちの方はログイン", "/users/sign_in") %>
        </p>
      </div>
    <% end %>
  </div>
</div>
