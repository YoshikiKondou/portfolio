<div class="container-fluid p-lg-5 bg-light mb-5">
  <div class="container">
    <div class="col-sm">
      <h2 class="my-4">ログイン</h2>
    </div>
    <%= render 'layouts/shared/error', obj: @user %>
    <% if flash[:failure] %>
      <p class="failure"><%= flash[:failure] %></p>
    <% end %>
    <%= form_with model: @user, url: users_login_path, class: "needs-validation", html: {novalidate: true} do |f| %>
      <div class="form-row mb-4">
        <div class="col-md-4">
          <%= f.label :email, class: "col-form-label" do %>
            メールアドレス <span class="badge bg-danger">必須</span>
          <% end%>
          <%= f.text_field :email, autocomplete: "email", placeholder: "メールアドレス", type: "email",  name: "user[email]", id: "user_email", class: "form-control", required: true %>
          <div class="invalid-feedback">
            入力してください
          </div>
        </div>
      </div>
      <div class="form-row mb-4">
        <div class="col-md-4">
          <%= f.label :password, class: "col-form-label" do %>
            パスワード <span class="badge bg-danger">必須</span>
          <% end %>
          <%= f.text_field :password, autocomplete: "new-password", placeholder: "パスワード", type: "password", name: "user[password]", id: "user_password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            入力してください
          </div>
          <small id="passwordHelpBlock" class="form-text text-muted">パスワードは、6文字以上で入力してください</small>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-12">
          <%= f.submit "ログイン", name: "commit", class: "btn btn-primary btn-block bg-danger" %>
        </div>
        <p class="pt-2">
          <%= link_to("新しいアカウントを作成", "/users/new") %>
        </p>
      </div>
    <% end %>
  </div>
</div>
